<h2><%= "#{l(:label_requirement)} #{@requirement.req_id}" %></h2>

<div class="issue tracker-2 status-1 priority-2 priority-default created-by-me details">

<div class="subject">
<h3><%= "#{@requirement.text}" %></h3>
</div>

<p class="author">
        <%= authoring @requirement.created_on, @requirement.author %>.
        <% if @requirement.created_on != @requirement.updated_at %>
        <%= l(:label_updated_time, time_tag(@requirement.updated_at)).html_safe %>.
        <% end %>
        </p>

<table class="attributes">
 <tr>
  <th><%= l(:label_req_url) %></th>
  <td><%= link_to RequirementsController.url(@requirement), @requirement.url %></td>
  <th/><td/>
 </tr>
</table>

<%= render :partial => 'linked_issues', :locals => { :requirement => @requirement } %>

</div>

<% if @requirement.versions.present? %>
<div id="history">
<h3><%=l(:label_history)%></h3>
<%= render :partial => 'versions', :locals => { :requirement => @requirement, :versions => @requirement.versions.reverse } %>
</div>
<% end %>

<% content_for :sidebar do %>
<% end %>

